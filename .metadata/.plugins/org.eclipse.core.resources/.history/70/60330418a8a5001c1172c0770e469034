import java.util.Scanner;

public class Ex06 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Scanner sc =new Scanner(System.in);
		System.out.println("삼각형의 밑변과 높이를 입력하세요");
		int a = sc.nextInt();
		int b = sc.nextInt();
		float c = a*b/2;
		System.out.println("삼각형의 넓이는 "+c+"입니다.");
		

	}

}
